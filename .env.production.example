# ============================================
# Evolution API - PRODUÇÃO
# ============================================
# Copie este arquivo para .env.production e configure suas variáveis

# ============================================
# SERVER
# ============================================
SERVER_NAME=evolution
SERVER_TYPE=http
SERVER_PORT=8080
# URL pública da sua Evolution API
SERVER_URL=http://45.79.152.52:8080

# ============================================
# DATABASE
# ============================================
# PostgreSQL no HOST do servidor (172.17.0.1)
DATABASE_PROVIDER=postgresql
DATABASE_CONNECTION_URI=postgresql://user:password@172.17.0.1:5432/evolution?schema=evolution_api
DATABASE_CONNECTION_CLIENT_NAME=evolution_exchange

# Dados a salvar no banco
DATABASE_SAVE_DATA_INSTANCE=true
DATABASE_SAVE_DATA_NEW_MESSAGE=true
DATABASE_SAVE_MESSAGE_UPDATE=true
DATABASE_SAVE_DATA_CONTACTS=true
DATABASE_SAVE_DATA_CHATS=true
DATABASE_SAVE_DATA_LABELS=true
DATABASE_SAVE_DATA_HISTORIC=true
DATABASE_SAVE_IS_ON_WHATSAPP=true
DATABASE_SAVE_IS_ON_WHATSAPP_DAYS=7
DATABASE_DELETE_MESSAGE=true

# ============================================
# REDIS CACHE
# ============================================
# Redis no HOST do servidor (172.17.0.1)
CACHE_REDIS_ENABLED=true
CACHE_REDIS_URI=redis://172.17.0.1:6379/6
CACHE_REDIS_TTL=604800
CACHE_REDIS_PREFIX_KEY=evolution
CACHE_REDIS_SAVE_INSTANCES=false

# ============================================
# AUTHENTICATION
# ============================================
# Chave global de API - ALTERE PARA UMA CHAVE SEGURA!
AUTHENTICATION_API_KEY=your-secure-api-key-here
AUTHENTICATION_EXPOSE_IN_FETCH_INSTANCES=true

# ============================================
# LOGS
# ============================================
LOG_LEVEL=ERROR,WARN,DEBUG,INFO,LOG,VERBOSE,DARK,WEBHOOKS
LOG_COLOR=true
LOG_BAILEYS=error

# ============================================
# CORS
# ============================================
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE
CORS_CREDENTIALS=true

# ============================================
# SESSION
# ============================================
CONFIG_SESSION_PHONE_CLIENT=Evolution API
CONFIG_SESSION_PHONE_NAME=Chrome

# ============================================
# QRCODE
# ============================================
QRCODE_LIMIT=30
QRCODE_COLOR=#175197

# ============================================
# WEBHOOKS
# ============================================
WEBHOOK_GLOBAL_ENABLED=false
WEBHOOK_GLOBAL_URL=

# Eventos de webhook
WEBHOOK_EVENTS_APPLICATION_STARTUP=false
WEBHOOK_EVENTS_QRCODE_UPDATED=true
WEBHOOK_EVENTS_MESSAGES_SET=true
WEBHOOK_EVENTS_MESSAGES_UPSERT=true
WEBHOOK_EVENTS_MESSAGES_EDITED=true
WEBHOOK_EVENTS_MESSAGES_UPDATE=true
WEBHOOK_EVENTS_MESSAGES_DELETE=true
WEBHOOK_EVENTS_SEND_MESSAGE=true
WEBHOOK_EVENTS_CONTACTS_SET=true
WEBHOOK_EVENTS_CONTACTS_UPSERT=true
WEBHOOK_EVENTS_CONTACTS_UPDATE=true
WEBHOOK_EVENTS_PRESENCE_UPDATE=true
WEBHOOK_EVENTS_CHATS_SET=true
WEBHOOK_EVENTS_CHATS_UPSERT=true
WEBHOOK_EVENTS_CHATS_UPDATE=true
WEBHOOK_EVENTS_CHATS_DELETE=true
WEBHOOK_EVENTS_GROUPS_UPSERT=true
WEBHOOK_EVENTS_GROUPS_UPDATE=true
WEBHOOK_EVENTS_GROUP_PARTICIPANTS_UPDATE=true
WEBHOOK_EVENTS_CONNECTION_UPDATE=true
WEBHOOK_EVENTS_CALL=true

WEBHOOK_REQUEST_TIMEOUT_MS=60000
WEBHOOK_RETRY_MAX_ATTEMPTS=10

# ============================================
# INSTANCE MANAGEMENT
# ============================================
# Tempo para deletar instância sem conexão (false = nunca)
DEL_INSTANCE=false

# ============================================
# INTEGRATIONS (opcional)
# ============================================
TYPEBOT_ENABLED=false
CHATWOOT_ENABLED=false
OPENAI_ENABLED=false
RABBITMQ_ENABLED=false
SQS_ENABLED=false
WEBSOCKET_ENABLED=false
PUSHER_ENABLED=false
KAFKA_ENABLED=false

# ============================================
# LOCALE
# ============================================
LANGUAGE=en
TZ=America/Sao_Paulo

# ============================================
# TELEMETRY
# ============================================
TELEMETRY_ENABLED=false

# ============================================
# PROMETHEUS METRICS
# ============================================
PROMETHEUS_METRICS=false
METRICS_AUTH_REQUIRED=true
METRICS_USER=prometheus
METRICS_PASSWORD=secure_password_here
